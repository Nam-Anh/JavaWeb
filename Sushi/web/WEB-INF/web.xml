<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>homeController</servlet-name>
        <servlet-class>controller.homeController</servlet-class>
        <init-param>
            <param-name>pageSize</param-name>
            <param-value>    3       </param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>menuController</servlet-name>
        <servlet-class>controller.menuController</servlet-class>
        <init-param>
            <param-name>pageSize</param-name>
            <param-value>    3       </param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>findSushiController</servlet-name>
        <servlet-class>controller.findSushiController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>errorController</servlet-name>
        <servlet-class>controller.errorController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>sushiDetails</servlet-name>
        <servlet-class>controller.sushiDetails</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>homeController</servlet-name>
        <url-pattern>/homeController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>menuController</servlet-name>
        <url-pattern>/menuController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>findSushiController</servlet-name>
        <url-pattern>/findSushiController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>errorController</servlet-name>
        <url-pattern>/errorController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>sushiDetails</servlet-name>
        <url-pattern>/sushiDetails</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>start.jsp</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>404</error-code>
        <location>/errorController</location>
    </error-page>
    <error-page>
        <exception-type>java.lang.Exception</exception-type>
        <location>/errorController</location>
    </error-page>
</web-app>
