<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>homeController</servlet-name>
        <servlet-class>controller.homeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>prayerController</servlet-name>
        <servlet-class>controller.prayerController</servlet-class>
        <init-param>
            <param-name>pageSize</param-name>
            <param-value>    3       </param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>prayerDetailsController</servlet-name>
        <servlet-class>controller.prayerDetailsController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>serviceController</servlet-name>
        <servlet-class>controller.serviceController</servlet-class>
        <init-param>
            <param-name>pageSize</param-name>
            <param-value>    3       </param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>contactController</servlet-name>
        <servlet-class>controller.contactController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>errorController</servlet-name>
        <servlet-class>controller.errorController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>homeController</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>prayerController</servlet-name>
        <url-pattern>/prayer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>prayerDetailsController</servlet-name>
        <url-pattern>/prayerDetails</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>serviceController</servlet-name>
        <url-pattern>/service</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>contactController</servlet-name>
        <url-pattern>/contact</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>errorController</servlet-name>
        <url-pattern>/errorController</url-pattern>
    </servlet-mapping>
    <!--Filter-->
    <filter>
        <filter-name>myFilter</filter-name>
        <filter-class>filter.MyFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>myFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>start.jsp</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>404</error-code>
        <location>/errorController</location>
    </error-page>
    <error-page>
        <exception-type>java.lang.Exception</exception-type>
        <location>/errorController</location>
    </error-page>
</web-app>
