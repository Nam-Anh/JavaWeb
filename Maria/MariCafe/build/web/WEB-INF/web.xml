<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>CakeListController</servlet-name>
        <servlet-class>controller.CakeListController</servlet-class>
        <init-param>
            <param-name>pageSize</param-name>
            <param-value>    3       </param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>HomeController</servlet-name>
        <servlet-class>controller.HomeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FindMariaCafe</servlet-name>
        <servlet-class>controller.FindMariaCafe</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CakeDetail</servlet-name>
        <servlet-class>controller.CakeDetail</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ErrorController</servlet-name>
        <servlet-class>controller.ErrorController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CakeListController</servlet-name>
        <url-pattern>/CakeListController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeController</servlet-name>
        <url-pattern>/HomeController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FindMariaCafe</servlet-name>
        <url-pattern>/FindMariaCafe</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CakeDetail</servlet-name>
        <url-pattern>/CakeDetail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ErrorController</servlet-name>
        <url-pattern>/ErrorController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>start.jsp</welcome-file>
        <!--<welcome-file>index.html</welcome-file>-->
    </welcome-file-list>
    <error-page>
        <error-code>404</error-code>
        <location>/ErrorPage/error.jsp</location>
    </error-page>
    <error-page>
        <exception-type>java.lang.Exception</exception-type>
        <location>/ErrorPage/error.jsp</location>
    </error-page>
</web-app>
